# Auto detect text files and perform LF normalization
* text=auto eol=lf

# TypeScript/JavaScript
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf

# JSON/Config
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Web
*.css text eol=lf
*.html text eol=lf

# Markdown
*.md text eol=lf

# Environment
*.env text eol=lf
*.env.* text eol=lf

# Next.js specific
next.config.* text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
